
<h2 align="center">
	Title: <%= @article.title %>
</h2>	

<div class="col-xs-8 col-xs-offset-2">
	<div class="well">
		<ul class="listing">
			<div class="row center">
				<div class=" col-md-4 col-md-offset-4">
					<li>Created By</li>
					<li>
						<%= link_to gravatar_for(@article.user), user_path(@article.user) %>
					</li>
					<li class="article-title">
						<%= link_to @article.user.username, user_path(@article.user) %>
					</li>
					<li>
						<small>
							<%= pluralize(@article.user.articles.count, "article") if @article.user.articles %>
						</small>
					</li>
				</div>
			</div>
		</ul>
	<h4 class="center descripton">
		<strong>
			Description
		</strong>
	</h4>
	<hr>
	<%= simple_format(@article.description) %>
	</div>
	<div class="arcicle-actions">

		<% if logged_in? && (current_user == @article.user || current_user.admin?) %>	
			<%= link_to "Edit", edit_article_path(@article), class: 'btn btn-s btn-primary' %>
			<%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-s btn-danger' %>
		<% end %>
		
		<%= link_to "View all articles", articles_path,  class: 'btn btn-s btn-success' %>
	</div>	
</div>


