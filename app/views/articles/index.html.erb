<h1 align = "center">All Articles</h1>

<p>
	<%= link_to "Create new article", new_article_path,  class: 'btn btn-lg btn-primary' %>
</p>


<% @articles.each do |article| %>
	<div class="well">
		<h3><%= article.title %></h3>
		<p><%= truncate(article.description, length: 100) %></p>
		<p> <%= link_to "Read More", article_path(article),  class: 'btn btn-s btn-success' %></p>
	</div>
<% end  %>